<main class="container container-fluid mt-5">
        <section class="previewCarousel">

            <div id="carouselControls" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img src="/public/images/liffchaser-carousel-1.jpg" class="d-block w-100" alt="learnCode">
                  </div>
                  <div class="carousel-item">
                    <img src="/public/images/liffchaser-carousel-2.jpg" class="d-block w-100" alt="learnCollab">
                  </div>
                  <div class="carousel-item">
                    <img src="/public/images/liffchaser-carousel-3.jpg" class="d-block w-100" alt="learnRead">
                  </div>
                </div>
              </div>

        </section>

        <div class="row">
            <div class="col-md-6">
              <h2>Log In</h2>
          
              <form class="form login-form">
                <div class="form-group mb-3">
                  <label for="email-login" class="form-label">Email</label>
                  <input class="form-control" type="text" id="email-login" />
                </div>
                <div class="form-group mb-3">
                  <label for="password-login" class="form-label">Password</label>
                  <input class="form-input form-control" type="password" id="password-login" />
                </div>
                <div class="form-group mb-3">
                  <button class="btn btn-primary" type="submit">Log In</button>
                </div>
              </form>
            </div>
            <div class="col-md-6">
              <h2>Sign Up</h2>
          
              <form class="form signup-form">
                <div class="form-group mb-3">
                  <label for="name-signup" class="form-label">Name</label>
                  <input class="form-control" type="text" id="name-signup" />
                </div>
                <div class="form-group mb-3">
                  <label for="email-signup" class="form-label">Email</label>
                  <input class="form-control" type="text" id="email-signup" />
                </div>
                <div class="form-group mb-3">
                  <label for="password-signup" class="form-label">Password</label>
                  <input class="form-input form-control" type="password" id="password-signup" />
                </div>
                <div class="form-group">
                  <button class="btn btn-primary" type="submit">Sign Up</button>
                </div>
              </form>
            </div>
          </div>

    </main>
